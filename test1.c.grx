@tensor[[i, j=i.., k]]
	const double dh~i~j~k~ = @d1[[d1cen4, h~i~j~[[x#]], k]];
	const double da~i~j~k~ = @d1[[d1cen4, a~i~j~[[x#]], k]];
@end

// Second derivatives
@tensor[[i, j=i.., k, l=k..]]
	const double ddh~i~j~k~l~ = @d2[[d2cen4, h~i~j~[[x# @test[[ testarg[] ]]]], k, l]];
	#define ddh~i~j~l~k~ ddh~i~j~k~l~
	#define ddh~j~i~k~l~ ddh~i~j~k~l~
	#define ddh~j~i~l~k~ ddh~i~j~k~l~
@end

@tensor[[i, j, k:j..]]
	const double gamma~i~j~k = 0.5 * @sum[[l]] guu~i~l * (gll~j~l~k + gll~k~l~j - gll~j~k~l) @end;
	[[x#]]
@end[]